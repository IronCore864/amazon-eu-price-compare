{
  "manifest_version": 2,

  "name": "Amazon Best Price Europe",
  "description": "Find the best price in Amazon european markets",
  "version": "1.4.0",

  "icons": {
    "128": "icon128.png",
    "48": "icon48.png"
  },

  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html",
    "default_title": "Amazon Best Price Europe"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://api.exchangeratesapi.io/*",
    "storage"
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": ["*://www.amazon.de/*", "*://www.amazon.fr/*", "*://www.amazon.it/*", "*://www.amazon.es/*", "*://www.amazon.co.uk/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
